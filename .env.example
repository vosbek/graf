# Codebase RAG MVP Configuration
# Copy this file to .env and update with your settings

# Repository Configuration
# Option 1: Set a parent directory containing multiple repositories
REPOS_PATH=/path/to/your/repos

# Option 2: Set specific repositories (comma-separated)
# MAIN_REPOS=repo1,repo2,repo3

# Example Windows paths:
# REPOS_PATH=C:/repos
# REPOS_PATH=C:/dev/projects
# REPOS_PATH=C:/Users/YourName/source/repos

# Example specific repositories:
# MAIN_REPOS=main-project,user-service,common-utils

# Container Configuration (optional - uses defaults if not set)
API_PORT=8082
CHROMADB_PORT=8001
NEO4J_HTTP_PORT=7474
NEO4J_BOLT_PORT=7687

# Neo4j Configuration
NEO4J_PASSWORD=codebase-rag-2024

# API Configuration
CHROMADB_HOST=codebase-rag-chromadb
NEO4J_HOST=codebase-rag-neo4j

# Auto-indexing (set to true to automatically index all repos on startup)
AUTO_INDEX=false